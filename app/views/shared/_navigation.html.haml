%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to(t('title'), root_path, class: 'navbar-brand')
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to t('home'), root_path
        %li
          = link_to t('shop'), books_path
                     
      %ul.nav.navbar-nav.navbar-right
        %li
          = render('shared/cart')
        - if user_signed_in?
          %li= link_to t('settings'), edit_account_path
          %li= link_to t('orders'), account_path
          %li= link_to t('sign_out'), destroy_user_session_path, method: 'delete'
        - else
          %li= link_to t('sign_in'), new_user_session_path
          %li= link_to t('sign_up'), new_user_registration_path
